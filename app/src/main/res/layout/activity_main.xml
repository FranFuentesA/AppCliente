<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fran.aplicacioncliente.MainActivity"
    android:background="@drawable/fondo2">


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/buttonAyuda"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_menu_help" />

    <Button
        android:text="Carta"
        android:layout_width="match_parent"
        android:id="@+id/buttonCarta"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:background="@drawable/imagencarta"
        android:textAlignment="center"
        android:onClick="onClickMenu"
        tools:ignore="HardcodedText"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/buttonRestaurante"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nombre de la aplicaciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_weight="1"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="RESTAURANTE"
        android:layout_width="687dp"
        android:id="@+id/buttonRestaurante"
        android:background="@drawable/imagenrestaurant"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:onClick="onClickMenu"
        tools:ignore="HardcodedText"
        android:layout_height="100dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/reservas"
        android:layout_width="match_parent"
        android:id="@+id/buttonReservas"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:background="@drawable/imagenreserva"
        android:onClick="onClickMenu"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/buttonCarta"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:contentDescription=""
        tools:ignore="ContentDescription,ObsoleteLayoutParam"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
